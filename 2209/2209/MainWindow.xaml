<Window x:Class="PersonalFinance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личные финансы" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding GlView}">

    <Window.Resources>
        <Style x:Key="Kartochka" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <DataTemplate x:Key="TranzItem">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Grid Width="36" Height="36">
                    <Ellipse Fill="LightGray"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Descr}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Kat}" FontSize="12" Foreground="Gray"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="{Binding Date, StringFormat=d}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="{Binding Sum, StringFormat=C}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FFF5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF1F2937" Padding="12">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
                    <Rectangle Width="36" Height="36" Fill="#FF4F46E5" RadiusX="6" RadiusY="6"/>
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock Text="MoneyTrack" FontSize="16" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="Управление финансами" FontSize="11" Foreground="#FF9CA3AF"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top">
                    <Button Command="{Binding Navi}" CommandParameter="Dash" Margin="0,6" Padding="8" HorizontalContentAlignment="Left">
                        <TextBlock Text="Дашборд" Foreground="White"/>
                    </Button>
                    <Button Command="{Binding Navi}" CommandParameter="Sch" Margin="0,6" Padding="8" HorizontalContentAlignment="Left">
                        <TextBlock Text="Счета" Foreground="White"/>
                    </Button>
                    <Button Command="{Binding Navi}" CommandParameter="Tranz" Margin="0,6" Padding="8" HorizontalContentAlignment="Left">
                        <TextBlock Text="Транзакции" Foreground="White"/>
                    </Button>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                    <Button Command="{Binding Nast}" Margin="0,6" Padding="8" HorizontalContentAlignment="Left">
                        <TextBlock Text="Настройки" Foreground="White"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" Padding="12" BorderBrush="#FFE6E6E6" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PageTitle}" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text=" — " FontSize="18" Margin="6,0"/>
                        <TextBlock Text="{Binding Sub}" VerticalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBox Width="220" Height="32" Margin="0,0,8,0" VerticalContentAlignment="Center"
                                 Text="{Binding TextSearch, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Command="{Binding AddTranz}" Padding="10,6">Добавить</Button>
                        <Button Command="{Binding Export}" Padding="10,6" Margin="8,0,0,0">Экспорт</Button>
                    </StackPanel>
                </Grid>
            </Border>

            <TabControl Grid.Row="1" SelectedItem="{Binding SelPage}" Background="Transparent">
                <TabItem Header="Дашборд">
                    <ScrollViewer>
                        <WrapPanel>
                            <Border Style="{StaticResource Kartochka}" Width="260">
                                <StackPanel>
                                    <TextBlock Text="Баланс" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Dash.TotalBal, StringFormat=C}" FontSize="22" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource Kartochka}" Width="260">
                                <StackPanel>
                                    <TextBlock Text="Доходы" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Dash.MonthInc, StringFormat=C}" FontSize="18" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

        </Grid>
    </Grid>
</Window>